<div class="container-sm mt-3 ml-5">
    <div class="row">
        <div class="col-8 col-md-6 mx-auto mb-5">
            <form action="/restaurants" method="POST" id="form" novalidate>
                <div class="form-group">
                    <i class="fas fa-utensils pr-2 me-1"></i>
                    <label for="name">餐廳名稱</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳名稱 ..." required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <i class="fas fa-utensils pr-2 me-1"></i>
                    <label for="name_en">餐廳英文名稱</label>
                    <input type="text" class="form-control" id="name_en" name="name_en" placeholder="請輸入餐廳英文名稱 ..."
                        required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <i class="fas fa-utensils pr-2 me-1"></i>
                    <label for="category">料理種類</label>
                    <input list="category" class="form-control" name="category" placeholder="請輸入料理種類" required>
                    <datalist id="category">
                        <option>中東料理</option>
                        <option>日式料理</option>
                        <option>義式料理</option>
                        <option>美式料理</option>
                        <option>酒吧</option>
                        <option>咖啡</option>
                    </datalist>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <i class="fas fa-map-marker-alt pr-2 me-1"></i>
                    <label for="location">地址</label>
                    <input type="text" class="form-control" id="location" name="location" placeholder="請輸入地址 ..."
                        required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <i class="fas fa-mobile-alt pr-2 me-1"></i>
                    <label for="phone">電話</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="請輸入電話 ..." required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>


                <div class="form-group">
                    <i class="fas fa-star fa-xs pr-1 me-1"></i>
                    <label>評分分數</label>
                    <div class="form-row">
                        <div class="col">
                            <input type="number" name="rating" class="form-control" min="0" max="10" step="0.1"
                                placeholder="請輸入評分分數" required>
                            <div class="valid-feedback">Good!</div>
                            <div class="invalid-feedback">This field is required!</div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <i class="fas fa-location-arrow pr-2 fa-xs me-1"></i>
                    <label for="google_map">google map</label>
                    <input type="url" class="form-control" id="google_map" name="google_map"
                        placeholder="請輸入Google map url ..." required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <i class="fas fa-image pr-2 me-1"></i>
                    <label for="image">照片</label>
                    <input type="url" class="form-control" id="image" name="image" placeholder="請輸入照片URL ..." required>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>

                <div class="form-group">
                    <label for="description" rows="3" cols="20">描述</label>
                    <textarea class="form-control" placeholder="描述..." id="description" name="description"
                        required></textarea>
                    <div class="valid-feedback">Good!</div>
                    <div class="invalid-feedback">This field is required!</div>
                </div>


                <button id="submit-btn" type="submit" class="btn btn-primary">新增</button>
            </form>
        </div>
    </div>
</div>